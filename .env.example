TELEGRAM_BOT_TOKEN=

# Comma-separated list of Telegram User IDs allowed to use the bot.
# If empty or not set, the bot refuses to start (safer default).
ALLOWED_USERS=12345678,87654321

# Set to true ONLY if you explicitly want an open bot.
# WARNING: this bot can execute local commands.
AIPAL_ALLOW_OPEN_BOT=false

# Download hardening (Telegram files)
AIPAL_DOWNLOAD_TIMEOUT_MS=60000
AIPAL_MAX_DOWNLOAD_BYTES=26214400

# Agent hardening (dangerous flags are opt-in)
AIPAL_CODEX_YOLO=false
AIPAL_GEMINI_YOLO=false
AIPAL_CLAUDE_DANGEROUSLY_SKIP_PERMISSIONS=false

# OpenCode tool permissions (safe-by-default is deny).
# You can set a custom JSON string, or allow-all explicitly.
# AIPAL_OPENCODE_PERMISSION={"*": "deny"}
AIPAL_OPENCODE_ALLOW_ALL=false
