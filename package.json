{
  "name": "airelay",
  "version": "0.1.10",
  "private": true,
  "description": "Telegram bot that forwards messages to a local CLI agent (OpenCode by default).",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "node --check src/index.js",
    "dev": "node --watch src/index.js",
    "lint": "biome lint .",
    "start": "node src/index.js",
    "start:no-punycode-warning": "NODE_OPTIONS=--disable-warning=DEP0040 node src/index.js",
    "start:quiet": "NODE_OPTIONS=--no-deprecation node src/index.js",
    "test": "node --test"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-cron": "^4.2.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13"
  }
}
